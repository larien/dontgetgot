{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "UI",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "API (Wrangler)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:api"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build"
    }
  ],
  "compounds": [
    {
      "name": "UI + API",
      "configurations": ["UI", "API (Wrangler)"],
      "preLaunchTask": "build",
      "stopAll": true
    }
  ]
}
